                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF525252"/>
            <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FF676767"/>
